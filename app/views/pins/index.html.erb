<p id="notice"><%= notice %></p>

<h1>Listing Pins</h1>

<div class="jumbotron">
<table class="table">
  <thead>
    <tr>
      <th>Image</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= image_tag pin.image.url(:medium)%></td>
        <td><%= pin.description %></td>
        <td><%= link_to 'Show', pin, class: 'btn btn-primary' %></td>
        <% if pin.user == current_user %>
          <td><%= link_to 'Edit', edit_pin_path(pin), class: 'btn btn-info'%></td>
          <td><%= link_to 'Delete', pin, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'%></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Pin', new_pin_path, class: 'btn btn-success' %>
